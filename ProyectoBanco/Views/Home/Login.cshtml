@model ProyectoBanco.Entities.UsuarioEnt

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout - Login.cshtml";
}

@using (Html.BeginForm("IniciarSesion", "Home", FormMethod.Post))
{



    <body class="img js-fullheight" src="~/WebStyles/img/bg.jpg">
        <div class="container">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="p-4 p-sm-5 my-4 mx-3">
                        <div class="mb-3">
                            <a href="@Url.Action("Inicio","Home")" class="text-primary">
                                <h3 class="text-primary"><i class="fa fa-laptop me-2" display: flex; align-items: flex-start;></i>Proyecto Banco</h3><br />
                            </a>
                        </div>
                        <div class="form-floating mb-3">
                            @Html.TextBoxFor(m => m.Correo, new { @type = "email", @class = "form-control", @placeholder = "correo@correo.com" })
                            <label for="floatingInput"></label>
                        </div>
                        <div class="form-floating mb-4">
                            @Html.TextBoxFor(m => m.Contrasenna, new { @type = "password", @class = "form-control", placeholder = "Contraseña" })
                            <label for="floatingPassword"></label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <div class="form-check">
                                <!-- Add your form-check elements here -->
                            </div>
                            <a href="@Url.Action("Recuperar","Home")">Recuperar Contraseña</a>
                        </div>
                        <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Iniciar Sesión</button>
                        <p class="text-center mb-0">Si no tiene una cuenta <a href="@Url.Action("Registro","Home")">Registrese</a></p>
                    </div>
                </div>
            </div>
        </div>
        </body>
        }
